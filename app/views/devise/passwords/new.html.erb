<section class="bg-gray-50 dark:bg-gray-900">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
    <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
      <img class="w-8 h-8 mr-2" src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/logo.svg" alt="logo">
       URL Shortener    
    </a>
    <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
          Create an account
        </h1>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "max-w-md mx-auto" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="mb-4">
            <%= f.label :email, class: "block font-semibold text-gray-600" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:border-indigo-500" %>
          </div>
          <div class="actions mb-4">
            <%= f.submit "Send me reset password instructions", class: "px-6 py-3 bg-indigo-500 text-white font-semibold rounded-lg hover:bg-indigo-600 focus:outline-none focus:bg-indigo-600" %>
          </div>
          
          <div class="flex justify-between">
              <div class="text-left">
                <%= link_to "Create account", new_registration_path(resource_name), class: 'text-indigo-500 hover:text-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
              </div>
              <div class="text-right text-gray-600">
                <p class="text-xs">Already have an account?</p>
                <%= link_to "Log in", new_session_path(resource_name), class: "text-indigo-500 text-right hover:text-indigo-700" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

