<%= form_with model: link, html: { class: 'flex' } do |f|%>
  <%= f.url_field :url, required: true ,class: 'bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full mb-2 py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-full-name', placeholder: 'https://www.example.com' %>
  <%= f.submit "Shorten", class: 'bg-indigo-500 text-white active:bg-indigo-600 font-bold uppercase text-sm px-4 py-25 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150 ml-2'%>
<% end %>