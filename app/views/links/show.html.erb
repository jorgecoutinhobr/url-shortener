<h1 class="text-6xl font-bold leading-normal mt-0 text-indigo-500">Click counts</h1>

<div class="grid grid-cols-2 p-2 bg-gray-200 shadow rounded-lg mb-4">
  <div class="text-xl text-blue-600 mb-2">
    <%= image_tag "https://www.google.com/s2/favicons?domain=#{@link.domain}", class: 'inline-block h-6'%>
    <%= link_to "#{@link.url}", view_path(@link), target: :_blank, data: { turbo: false } %>
  </div>
  <div class="text-xl text-gray-700">
    <%= pluralize(@link.views_count, 'view') %>
  </div>
</div>

<%= line_chart @link.views.group_by_day(:created_at, range: 2.weeks.ago..Time.now, expand_range: true).count %>
<div class="mt-4">
  <%= link_to "Edit", edit_link_path(@link), class: 'no-underline text-white bg-indigo-500 border border-solid border-indigo-500 hover:bg-white hover:text-indigo-500 active:bg-indigo-600 font-bold uppercase text-sm rounded max-w-xs outline-none px-6 py-3  py-3 focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150' if @link.editable_by?(current_user) %>
  <%= link_to 'Back to home page', root_path, class: 'no-underline text-indigo-500 bg-transparent border border-solid border-indigo-500 hover:bg-indigo-500 hover:text-white active:bg-indigo-600 font-bold uppercase text-sm rounded max-w-xs outline-none px-6 py-3  py-3 focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150' %>
</div>




